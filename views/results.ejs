<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.jsdelivr.net/npm/chart.js@3.7.1/dist/chart.min.js"></script>
    <title>Results</title>
</head>
<body>
    <p>hello <%= displayName %>!</p>
    <h2>your <%= time_range.replace('_', ' ') %> spotify personality type: </h2>
    <h1 style="color: green"><%= userResults[0] %></h1>
    <h2>you are: </h2>
    <% userResults[1].forEach(type=>{ %>
        <p><%= type %></p>
    <% }) %>

    <h2>what does my personality type mean?</h2>

    <ul><% for(var feature in userResults[2]) { %>
        <li><%= feature %> </li>
        <ul><% for(var type in userResults[2][feature]) { %>
            <li><%= type %>: <%= userResults[2][feature][type] %></li>
        <% } %></ul>
    <% } %></ul>

    <canvas id="myChart" width="400" height="400"></canvas>
    <script>
        
    var chartData = JSON.parse('<%- JSON.stringify(chartData) %>');
    const ctx = document.getElementById('myChart').getContext('2d');
    const myChart = new Chart(ctx, {
        type: 'bar',
        data: {
            labels: chartData[1],
            datasets: [{
                label: '# of Users',
                data: chartData[2],
                backgroundColor: [
                    'rgba(255, 99, 132, 0.2)',
                    'rgba(54, 162, 235, 0.2)',
                    'rgba(255, 206, 86, 0.2)',
                    'rgba(75, 192, 192, 0.2)',
                    'rgba(153, 102, 255, 0.2)',
                    'rgba(255, 159, 64, 0.2)'
                ],
                borderColor: [
                    'rgba(255, 99, 132, 1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 206, 86, 1)',
                    'rgba(75, 192, 192, 1)',
                    'rgba(153, 102, 255, 1)',
                    'rgba(255, 159, 64, 1)'
                ],
                borderWidth: 1
            }]
        },
        options: {
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        }
    });
    </script>


</body>
</html>